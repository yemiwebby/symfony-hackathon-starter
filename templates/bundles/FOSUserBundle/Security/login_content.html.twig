{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-12 title_header text-center">
            <h3> Login </h3>
        </div>

        <div class="col-md-12">

            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">


                {% if error %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Error!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="text-center mb-4">
                    <h1 class="h3 mb-3 font-weight-normal">Symfony Hackathon Starter </h1>
                </div>

                <div class="form-label-group">
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                </div>



                <div class="form-label-group">
                    <input type="password" id="password"  name="_password" autocomplete="current-password" class="form-control" placeholder="Password" required>
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                </div>


                <div class="checkbox mb-3">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                    </label>
                    &nbsp;&nbsp;
                    <a href="{{ path('fos_user_resetting_request') }}"> Forgot your password</a>

                </div>

                <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>

                <div class="text-center mt-10">
                    <p>OR</p>
                </div>
                <div class="form-group social-wrapper">
                    <div class="col-md-12">
                        <a class="btn btn-block btn-facebook btn-social" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}">
                            <i class="fa fa-facebook-f fa-sm"></i>Connect with Facebook
                        </a>

                        <a class="btn btn-block btn-twitter btn-social" href="{{ path('hwi_oauth_service_redirect', {'service': 'twitter'}) }}">
                            <i class="fa fa-twitter fa-sm"></i>Connect with Twitter
                        </a>

                        <a class="btn btn-block btn-google btn-social" href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}">
                            <i class="fa fa-google-plus-g fa-xs"></i>Connect in with Google
                        </a>

                        <a class="btn btn-block btn-github btn-social" href="{{ path('hwi_oauth_service_redirect', {'service': 'github'}) }}">
                            <i class="fa fa-github fa-sm"></i>Connect with GitHub
                        </a>

                        <a class="btn btn-block btn-linkedin btn-social" href="{{ path('hwi_oauth_service_redirect', {'service': 'linkedin'}) }}" style="margin-bottom: 10px;">
                            <i class="fa fa-linkedin fa-sm"></i>Connect with LinkedIn
                        </a>

                        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'auth0'}) }}" style="color: #fff;">
                            <div class="card mb-3" style="background-color: #e8542e">
                                <div class="card-body" style="padding: 0;">
                                    <img src="https://i.imgur.com/02VeCz0.png" height="40">
                                    Connect with Auth0
                                </div>
                            </div>
                        </a>


                        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'instagram'}) }}" style="color: #fff">
                            <div class="card mb-3" style="background-color: #947563">
                                <div class="card-body" style="padding: 0;">
                                    <img src="https://i.imgur.com/aRc6LUJ.png" height="40">
                                    Connect with Instagram
                                </div>
                            </div>
                        </a>

                        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'gitlab'}) }}" style="color: #fff">
                            <div class="card mb-3" style="background-color: #fca326">
                                <div class="card-body" style="padding: 0;">
                                    <img src="https://i.imgur.com/rmO0V2W.png" height="40">
                                    Connect with GitLab
                                </div>
                            </div>
                        </a>

                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
